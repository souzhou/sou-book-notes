<div class="top-box">
    <div class="description-cover">
        <img src="/images/covers/cover_01_large.jpg">
        <div class="description-rating">
            <span>My rating:</span>
            <span style="color:#FB2576;">★★★★☆</span>
        </div>
    </div>
    <div class="description">
        <div class="description-title-author">
            <h2 style="display:inline"><%= locals.book.title %></h2>
            <h3 style="display:inline">by <%= locals.book.author %></h3>
        </div>
        <div class="description-info">
            <p>published: <%= locals.published %></p>
            <p>ISBN: <%= locals.book.isbn %></p>
            <p>Date read: <%= locals.date_read %></p>
        </div>
        <p class="description-summary">
            <%= locals.book.summary %>
        </p>
        <div class="description-links">
            <a class="show_notes" href="#">show notes</a>
            <% if (locals.book.url_openlibrary) { %>
                <span>|</span>
                <a href="#">openlibrary</a>
            <% } %>
            <% if (locals.book.url_archive_org) { %>
                <span>|</span>
                <a href="#">archive.org</a>
            <% } %>
            <% if (locals.book.url_goodreads) { %>
                <span>|</span>
                <a href="#">goodreads</a>
            <% } %>
            <% if (locals.book.url_amazon) { %>
                <span>|</span>
                <a href="#">amazon</a>
            <% } %>
            <% if (locals.catalog) { %>
                <a class="close_description" style="margin-left:auto;" href="#">close</a>
            <% } %>
            <% if (!locals.catalog) { %>
                <a class="redirect_description" style="margin-left:auto;" href="/">close</a>
            <% } %>
            
        </div>
        <div class="book-notes">
            <h3>My Notes</h3>
            <p><%= locals.book.notes %></p>
        </div>
    </div>
</div>